import React, { useState } from "react";
import "./App.css";

const Dashboard = () => {
  const [message, setMessage] = useState("");
  const [result, setResult] = useState("");

  const checkScam = () => {
    if (!message.trim()) {
      alert("Please paste a message to analyze");
      return;
    }

    // Temporary demo logic
    setResult("‚ö†Ô∏è Scam Detected (Confidence: 92%)");
  };

  return (
    <>
      <div className="navbar">
        <div className="logo">üõ°Ô∏è Scam Detection Alert</div>
      </div>

      <div className="dashboard">
        <h2>Scam Message Analyzer</h2>
        <p className="subtitle">
          Paste any SMS, Email, or message to detect scams
        </p>

        <textarea
          placeholder="Paste suspicious message here..."
          value={message}
          onChange={(e) => setMessage(e.target.value)}
        />

        <button className="btn" onClick={checkScam}>
          Check Scam
        </button>

        {result && <div className="result-box">{result}</div>}
      </div>
    </>
  );
};

export default Dashboard;
